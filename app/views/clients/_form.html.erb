<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true  %>
  </div>
  <div class="field">
    <%= f.label :surname %><br>
    <%= f.text_field :surname, required: true %>
  </div>
  <div class="field">
    <%= f.label :birthdate %><br>
    <%= f.date_field :birthdate, required: true %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre, required: true %>
  </div>
  <div class="field">
    <%= f.label :dni %><br>
    <%= f.number_field :dni, required: true %>
  </div>
  <div class="field">
    <%= f.label :cuil %><br>
    <%= f.number_field :cuil, required: true, size: "11" %>
  </div>
  <div class="field">
    <%= f.label :skype %><br>
    <%= f.text_field :skype %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, type: :email, required: true %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br>
    <%= f.text_field :telephone %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
