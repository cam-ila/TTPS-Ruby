<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  
  <div class="form-group">
    <% f.label :name %>Nombre<br>
    <%= f.text_field :name, required: true, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <% f.label :surname %>Apellido<br>
    <%= f.text_field :surname, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <% f.label :birthdate %>Fecha de Nacimiento<br>
    <%= f.date_field :birthdate, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <% f.label :genre %>Genero<br>
    <%= f.text_field :genre, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <% f.label :dni %>Numero de Documento<br>
    <%= f.number_field :dni, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <% f.label :cuil %>CUIT/CUIL<br>
    <%= f.number_field :cuil, required: true, size: "11", class: 'form-control' %>
  </div>
  <div class="form-group">
    <% f.label :skype %>Skype<br>
    <%= f.text_field :skype, class: 'form-control' %>
  </div>
  <div class="form-group">
    <% f.label :email %>Email<br>
    <%= f.text_field :email, type: :email, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <% f.label :telephone %>Teléfono<br>
    <%= f.text_field :telephone, class: 'form-control'%>
  </div>
  <div class="form-group">
    <% f.label :address %>Dirección<br>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
</div>
<% end %>
